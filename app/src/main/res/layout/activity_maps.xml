<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true">

        <fragment xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.valxp.app.infiniteflightwatcher.app.MapsActivity"
            class="com.valxp.app.infiniteflightwatcher.TouchableMapFragment"
            />
        <ImageView
            android:background="@drawable/shadowed_ui_background"
            android:id="@+id/drawer_handle"
            android:layout_marginTop="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="-6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:src="@drawable/ic_navigation_drawer"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_gravity="right|top"
            android:gravity="right|top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/toggleMapType"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shadowed_ui_button"
                android:text="@string/button_toggle_type" />
            <ProgressBar
                android:layout_margin="5dp"
                android:id="@+id/progress"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:indeterminate="true"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/nobody_is_playing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shadowed_ui_background"
            android:text="@string/nobody_is_playing"
            android:textColor="@android:color/black"
            android:textSize="20sp" />


        <com.valxp.app.infiniteflightwatcher.InfoPane xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/info_pane"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="2dp"
                android:id="@+id/image_layout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:background="@drawable/shadowed_ui_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/plane_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_boeing_717_200"
                />
                <TextView
                    android:id="@+id/tap_to_see_more"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:textSize="10sp"
                    android:layout_height="wrap_content"
                    android:text="@string/tap_to_see_more_text"/>
            </LinearLayout>
            <ImageView
                android:layout_marginLeft="2dp"
                android:id="@+id/my_loc"
                android:layout_toRightOf="@id/image_layout"
                android:layout_alignBottom="@id/image_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_mylocation"
                android:background="@drawable/shadowed_ui_background"/>
            <LinearLayout
                android:layout_margin="2dp"
                android:id="@+id/inner_info_pane"
                android:background="@drawable/shadowed_ui_background"
                android:orientation="horizontal"
                android:layout_below="@+id/image_layout"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:minWidth="140dp"
                    android:id="@+id/left_pane"
                    android:orientation="vertical"
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </LinearLayout>
                <View
                    android:id="@+id/central_separator"
                    style="@style/vertical_separator"
                    android:layout_height="match_parent"
                    />
                <LinearLayout
                    android:minWidth="150dp"
                    android:id="@+id/right_pane"
                    android:orientation="vertical"
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </LinearLayout>
            </LinearLayout>

        </com.valxp.app.infiniteflightwatcher.InfoPane>
    </FrameLayout>
    <LinearLayout
        android:layout_gravity="start"
        android:orientation="vertical"
        android:layout_width="320dp"
        android:background="@drawable/shadowed_ui_background"
        android:layout_height="match_parent">
        <ExpandableListView
            android:id="@+id/expandableList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
        </ExpandableListView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/enable_overlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enable_heatmap"
                android:textColor="@android:color/secondary_text_light"
                />
            </LinearLayout>
         <TextView
             android:id="@+id/version"
             android:layout_gravity="bottom|left"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@android:color/darker_gray"
             />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>


